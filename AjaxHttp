<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

</head>
<body>
    <div class="container my-3">
        <div class="row"></div>
    </div>
<!--xml, json-->

<script>
const request = new XMLHttpRequest();


request.open('GET', 'https://restcountries.com/v3.1/name/turkey');
request.send();

//async
request.addEventListener('load', function(){
    const data = JSON.parse(this.responseText);
    console.log(data);
    console.log(typeof data);
    
    setCountry(data[0]);
    //string to json
});

function setCountry(data){
    const html = `
    <div class="col-3" style="width: 18rem;">
        <div class="card h-100">
            <img src="${data.flags.png}" class="card-img-top" alt="...">
            
        </div>
    </div>
    `;
    document.querySelector(".container.row").innerAdjacentHTML("beforeend", html);
}



</script>



</body>
</html>